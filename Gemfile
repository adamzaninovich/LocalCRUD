source 'http://rubygems.org'

gem 'rails',          '3.1.0'

# database
gem 'mongoid',        '~> 2.2.0'
gem 'bson_ext',       '~> 1.3.1'

# templates
gem 'haml-rails',     '~> 0.3.4'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.1.0'
  gem 'coffee-rails', '~> 3.1.0'
  gem 'uglifier'
end

gem 'jquery-rails'

group :production do
  gem 'therubyracer-heroku', '~> 0.8'
end

